<h1><%= @project.title %></h1>
<h4>Mes collaborateurs sur ce projet :</h4>
<p><%= @project.collaborators_desc %></p>
<%= cl_image_tag @project.photo.key, width: 600, height: 600, crop: :fill %>

<h4>Plus en détail :</h4>
<p><%= @project.description %></p>
<% @project.skills.each do |skill| %>
  <p><em><%= skill.title : skill.rating %> <i class="fas fa-star"></i></em></p>
<% end %>
<p>Début du projet : <%= @project.date_start %></p>
<% if @project.finished == true %>
  <p>Terminé le : <%= @project.date_end %></p>
<% end %>
